@{
    ViewData["Title"] = "Assign Tasks";

}
@using TaskManagement.CommonContracts.ViewModels;
@model AssignTasksViewModel

<script src="~/js/taskManagement.js"></script>

<style>
    .required:after {
        content: " *";
        color: red;
    }
</style>

<h1 class="pb-1">@ViewData["Title"]</h1>

<div class="card">
    <form id="taskDetails" class="col-sm-12 pt-2" method="post" action="/TaskManagement/SaveTask">
        <div class="form-group">
            <label for="projects" class="font-weight-bold required">Project</label>
            @Html.DropDownList("projects", new SelectList(Model.Projects, "Id", "Name"), "--Select a project--", new { @class = "form-control", @onchange = "GetEmployeesByProject()" })
        </div>
        <div class="form-group">
            <label for="description" class="font-weight-bold required">Description</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
        <div class="form-group row">
            <div class="form-group col-sm-6">
                <label for="startDate" class="font-weight-bold required">Start Date of Task [dd-mm-yyyy]</label>
                <input type="date" class="form-control" id="startDate" name="startDate">
            </div>
            <div class="form-group col-sm-6">
                <label for="dueDate" class="font-weight-bold required">Due Date of Task [dd-mm-yyyy]</label>
                <input type="date" class="form-control" id="dueDate" name="dueDate">
            </div>
        </div>
        <div class="form-group">
            <label for="employees" class="font-weight-bold required">Who should do this?</label>
            <select multiple="" class="form-control" id="employees" name="employees">
                <option></option>
            </select>
        </div>
    </form>
    <div class="card-footer">
        <button class="btn btn-primary" onclick="Save()">Add a task</button>
        <button class="btn btn-danger float-right" onclick="GotoHomePage()">Cancel</button>
    </div>
</div>